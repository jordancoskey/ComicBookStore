@model IEnumerable<ComicBookStore.Models.Comic>

@{
    ViewBag.Title = "View Comics";
}
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                Choose your world,
                <small>start your adventure..</small>
            </h1>
            <ol class="breadcrumb">
                <li>
                    @Html.ActionLink("Home", "Index", "Home")
                </li>
                <li class="active">View Comics</li>
            </ol>
        </div>
    </div>
    <!-- /.row -->
    @foreach (var item in Model)
    { 
        var curUser = Session["curUser"] as ComicBookStore.Models.User;
        <div class="col-md-4 portfolio-item">
            @if (curUser.Admin)
            {
                <a href="@Url.Action("EditComics", "Home", new { id = item.ComicID })">
                    @{
                        var base64 = Convert.ToBase64String(item.Cover);
                        var imgSrc = String.Format("data:image/gif;base64,{0}", base64);
                    }
                    <img class="img-circle img-responsive img-fluid d-block mx-auto" src="@imgSrc" alt="">
                    <h3>
                        @item.Title <small>@item.Edition Edition</small>
                    </h3>
                    <h4>by: @item.Author</h4>
                    <p>@item.Description</p>
                    <p>R @item.Price</p>
                         </a>
                  
                      

